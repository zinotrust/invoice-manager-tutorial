generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Invoice {
  id            String    @id @default(cuid())
  purpose       String
  amount        Float
  customerEmail String
  invoiceLink   String
  status String @default("PENDING")
  dueDate       DateTime
  paidAt        DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  
  @@index([status])
  @@index([customerEmail])
}
